<%- include('../partials/header'); -%>

<h2 class="text-center mt-5">Creating Item Page</h2>

<form action="/api/webid/items" method="post" enctype="multipart/form-data" style="max-width: 700px; margin: 0 auto">
    <div class="border border-secondary rounded p-3" style="font-size: 1.5rem;">
        <div class="mb-3 form-group row">
            <label for="name" class="form-label col-2">Name</label>
            <div class="col-10">
                <input type="text" class="form-control col-8" id="name" name="name">
            </div>
        </div>

        <div class="mb-3 form-group row">
            <label for="description" class="form-label col-2">Description</label>
            <div class="col-10">
                <textarea class="form-control col-sm-8" id="description" name="description" rows="5"></textarea>
            </div>
        </div>

        <div class="mb-3 form-group row">
            <label for="category" class="form-label col-2">Category</label>
            <div class="col-10">
                <select name="category" class="form-select">
                    <% categories.forEach(function(category){ %>
                    <option value="<%= category.name %>"><%= category.name %></option>
                    <% }); %>
                </select>
            </div>

        </div>

        <div class="mb-3 form-group row">
            <label for="startingBid" class="form-label col-2">Starting bid</label>
            <div class="col-10">
                <input type="number" class="form-control" id="startingBid" name="startingBid">
            </div>
        </div>

        <div class="mb-3 form-group row">
            <label for="image" class="form-label col-2">Choose image</label>
            <div class="col-10">
                <input type="file" class="form-control" id="image" name="image" accept="image/png, image/jpeg">
            </div>
        </div>

        <div class="mb-3 form-group row">
            <label for="image" class="form-label col-2">Choose image</label>
            <div class="col-10">
                <input type="file" class="form-control" id="previewImages" name="previewImages" multiple accept="image/png, image/jpeg">
            </div>

        </div>

        <div id="submit-btn-container" class="d-flex justify-content-center ">
            <button style="border: 0; border-radius: 5%; font-size: 2rem; background-color: var(--bold-background);" id="submit-btn" type=" submit">Create</button>
        </div>
    </div>
</form>

<div>

</div>

