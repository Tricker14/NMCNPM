    <div id="userAvatarField" style="width: 10vw" class=" d-flex justify-content-around dropdown">
      </button>
      <% if(user){ %>
      <div class="d-flex align-items-center">
        <a href="/webid/profile/<%= user._id %>">
          <% if(user.image){ %>
          <img src="<%= '/images/users-images/' + user.image %>" alt="Profile" style="width: 5rem;">
          <% }else{ %>
          <img src="/images/auth-image/anonymous.jpg" alt="Anonymous" style="width: 5rem;">
          <% } %>
        </a>
      </div>
      <span id="greetings" class="align-self-center">Hi, <%= currentUser.username %></span>
      <ul id="dropdown-menu" class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="/webid/profile/<%= user._id %>">User Profile</a></li>
